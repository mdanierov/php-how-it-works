{
  "name": "cargo/platform",
  "type": "project",
  "license": "proprietary",
  "description": "Cargo platform with Symfony 6.4, Doctrine, EasyAdmin, Vue 3 + Vite, JWT, VichUploader, LiipImagine, Messenger, PayPal",
  "require": {
    "php": ">=8.1",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/framework-bundle": "^6.4",
    "symfony/runtime": "^6.4",
    "symfony/console": "^6.4",
    "symfony/dotenv": "^6.4",
    "symfony/yaml": "^6.4",
    "symfony/asset": "^6.4",
    "symfony/uid": "^6.4",
    "symfony/http-client": "^6.4",
    "symfony/security-bundle": "^6.4",
    "symfony/serializer-pack": "^1.0",
    "symfony/mailer": "^6.4",
    "symfony/translation": "^6.4",
    "symfony/validator": "^6.4",
    "symfony/twig-bundle": "^6.4",
    "twig/extra-bundle": "^3.10",
    "doctrine/orm": "^2.16",
    "doctrine/doctrine-bundle": "^2.11",
    "doctrine/doctrine-migrations-bundle": "^3.6",
    "symfony/orm-pack": "^2.3",
    "symfony/messenger": "^6.4",
    "symfony/doctrine-messenger": "^6.4",
    "lexik/jwt-authentication-bundle": "^2.20",
    "easycorp/easyadmin-bundle": "^4.10",
    "vich/uploader-bundle": "^2.3",
    "liip/imagine-bundle": "^2.10",
    "guzzlehttp/guzzle": "^7.8",
    "symfonycasts/vite-bundle": "^1.0",
    "nelmio/cors-bundle": "^2.4"
  },
  "require-dev": {
    "symfony/maker-bundle": "^1.61",
    "phpunit/phpunit": "^10.5",
    "symfony/test-pack": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "6.4.*"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r 'file_exists(\".env\") || copy(\".env.example\", \".env\");'"
    ]
  }
}