###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=CHANGE_ME_SECRET
APP_DEBUG=1
###< symfony/framework-bundle ###

# Database (SQLite by default for simplicity)
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"

# JWT
JWT_PASSPHRASE=changeit
JWT_PUBLIC_KEY_PATH=%kernel.project_dir%/config/jwt/public.pem
JWT_PRIVATE_KEY_PATH=%kernel.project_dir%/config/jwt/private.pem

# PayPal Credentials
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# CORS
CORS_ALLOW_ORIGIN=^https?://localhost(:[0-9]+)?$